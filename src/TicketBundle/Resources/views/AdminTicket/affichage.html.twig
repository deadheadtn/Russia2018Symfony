{% extends "RUSSIAPIBundle::layout.html.twig" %}



{% block content1 %}



    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Liste des Tickets</div>
        <div class="container">
            <div class="row">
                <div class="search">
                    <input type="text" class="form-control input-sm" maxlength="64" placeholder="Search" id="Rechercher" align="right"/>
                    <button type="submit" class="btn btn-primary btn-sm" >Search</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive table-hover">

                <table class="table table-bordered" id="table1" width="100%" cellspacing="0">

                    <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Type</th>
                        <th>Prix</th>
                        <th>Email</th>
                        <th>Etat Ticket</th>
                        <th>Date_Ajout</th>
                        <th>Supprimer</th>

                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Type</th>
                        <th>Prix</th>
                        <th>Email</th>
                        <th>Etat Ticket</th>
                        <th>Date_Ajout</th>
                        <th>Supprimer</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for t in tickets %}
                        <tr class="ticket">
                            <td>{{ t.idUser.nom }}</td>
                            <td>{{ t.type }}</td>
                            <td>{{ t.prix }}</td>
                            <td>{{ t.email }}</td>
                            <td>{{ t.etatTicket}}</td>
                            <td>{{ t.dateAjout|date }}</td>
                            <td><a  href="{{ path('_delete',{'sup':t.idTicket}) }}"><img src="{{ asset('bundles/russiapi/img/poubelle.jpg') }}" width="35" ></a></td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


        <div class="navigation">
            {{ knp_pagination_render(tickets) }}
        </div>


    </div>
    </div>

    <script src="{{ asset('bundles/russiapi/js/jquery-1.11.0.min.js') }}"></script>
    {% for i in tickets %}
        <script>
            $("#Rechercher").keyup(
                    function () {

                        $.ajax({


                            url: "{{ path('_affichage') }}",
                            data: {'type':$(this).val()}
                        }).done(function(response){
                                    var table1 =$(response).find(".ticket");
                                    $('#table1').empty();
                                    $('#table1').append(table1);
                                }

                        );
                    }
            );
        </script>
    {% endfor %}

{% endblock %}


