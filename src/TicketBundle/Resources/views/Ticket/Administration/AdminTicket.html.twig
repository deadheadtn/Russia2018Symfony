{% extends "RUSSIAPIBundle::layout.html.twig" %}
{% block body %}
    <div class="card mb-3">
    <div class="card-header">
  <i class="fa fa-table"></i> Data Table Example</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Prix</th>
                    <th>Email</th>
                    <th>Etat Ticket</th>
                    <th>Date_Ajout</th>

                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Type</th>
                    <th>Prix</th>
                    <th>Email</th>
                    <th>Etat Ticket</th>
                    <th>Date_Ajout</th>
                </tr>
                </tfoot>
                <tbody>
                {% for t in tickets %}
                    <tr>
                        <td>{{ t.type }}</td>
                        <td>{{ t.prix }}</td>
                        <td>{{ t.email }}</td>
                        <td>{{ t.etatTicket}}</td>
                        <td>{{ t.dateAjout|date }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
    </div> {% endblock %}