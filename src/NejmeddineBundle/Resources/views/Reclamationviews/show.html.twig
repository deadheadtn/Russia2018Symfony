    <table>
        <tbody>
            <tr>
                <th>Idreclamation</th>
                <td>{{ reclamation.idReclamation }}</td>
            </tr>
            <tr>
                <th>Sujetrec</th>
                <td>{{ reclamation.sujetRec }}</td>
            </tr>
            <tr>
