{% extends 'NejmeddineBundle:ViewsNews:News.html.twig' %}

{% block body %}
    <h1>News</h1>

    <table>
        <tbody>
            <tr>
                <th>Idnews</th>
                <td>{{ news.idNews }}</td>
            </tr>
            <tr>
                <th>Idcooperation</th>
                <td>{{ news.idCooperation }}</td>
            </tr>
            <tr>
                <th>Titren</th>
                <td>{{ news.titreN }}</td>
            </tr>
            <tr>
                <th>Typen</th>
                <td>{{ news.typeN }}</td>
            </tr>
            <tr>
                <th>Motcles</th>
                <td>{{ news.motCles }}</td>
            </tr>
            <tr>
                <th>Texten</th>
                <td>{{ news.texteN }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ news.imageN }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_manage_news_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_manage_news_edit', { 'idNews': news.idNews }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
